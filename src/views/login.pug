extends base

block content 
    if errorMessage     
        span=errorMessage 
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=c6d2d55965a511746426") Continue with Github &rarr;
    hr
    div 
        span Don't have an account?
        a(href="/join") Create one noew &rarr;